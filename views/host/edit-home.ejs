<%- include('../partials/head') %>

  </head>

  <body>

    <%- include('../partials/nav') %>


      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
        <h1 class="text-xl text-gray-800 font-bold text-center mb-6">
          <%= editing ? "Edit" : "Register" %> your home here:
        </h1>
        <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" class="max-w-md mx-auto">


          <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

          <input type="text" placeholder="Enter your House Name"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="houseName" value="<%= editing ? home.houseName : '' %>">


          <input type="text" placeholder="Price Per Night"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="price" value="<%= editing ? home.price : '' %>">

          <input type="text" placeholder="Location"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="location" value="<%= editing ? home.location : '' %>">

          <input type="text" placeholder="Rating"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="rating" value="<%= editing ? home.rating : '' %>">

          <input type="text" placeholder="Enter Photo Url"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="photoUrl" value="<%= editing ? home.photoUrl : '' %>">


          <textarea placeholder="Description"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            name="description"><%= editing ? home.description : '' %></textarea>


          <input type="submit" value="<%= editing ? " Update Home" : "Add Home" %>" class="w-full bg-red-500 text-white
          py-2 rounded-md hover:bg-red-600 transition duration-300">
        </form>

      </main>
  </body>

  </html>